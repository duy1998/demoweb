<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trang Admin SCTT-Shop</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/site.css">

    <script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="bootstrap-select/js/i18n/defaults-vi_VN.min.js"></script>
    <style>
        body {
            background: #ddd;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="col-md-8 col-md-offset-2" style="margin-top: 5%; background: #fff; padding: 20px;">
            <form class="well form-horizontal" action=/signup" method="post" id="signupForm">
                <fieldset>

                    <!-- Form Name -->
                    <legend>
                        <center>
                            <h2><b>Đăng Ký Tài Khoản</b></h2>
                        </center>
                    </legend><br>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-3 col-md-offset-1 control-label">Tên Tài Khoản</label>
                        <div class="col-md-5 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input name="username" placeholder="UserName" class="form-control" type="text">
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-3 col-md-offset-1 control-label">Họ Và Tên</label>
                        <div class="col-md-5 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input name="fullName" placeholder="Full Name" class="form-control" type="text">
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-3 col-md-offset-1 control-label">E-Mail</label>
                        <div class="col-md-5 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                <input name="email" placeholder="E-Mail Address" class="form-control" type="text">
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-3 col-md-offset-1 control-label">Mật Khẩu</label>
                        <div class="col-md-5 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                <input name="password" placeholder="Password" class="form-control" type="password">
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-3 col-md-offset-1 control-label">Nhập Lại Mật Khẩu</label>
                        <div class="col-md-5 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                <input name="confirm_password" placeholder="Confirm Password" class="form-control"
                                    type="password">
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                            <label class="col-md-3 col-md-offset-1 control-label">Địa Chỉ</label>
                            <div class="col-md-5 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                    <input name="address" class="form-control" type="text">
                                </div>
                            </div>
                        </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-3 col-md-offset-1 control-label">Số Điện Thoại.</label>
                        <div class="col-md-5 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                <input name="phoneNumber" class="form-control" type="text">
                            </div>
                        </div>
                    </div>

                    <!-- Success message
                    <div class="alert alert-success" role="alert" id="success_message">Success <i
                            class="glyphicon glyphicon-thumbs-up"></i> Success!.</div> -->

                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label"></label>
                        <div class="col-md-4"><br>
                            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit"
                                class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span
                                    class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
    </div><!-- /.container -->

</body>
<script>
    window.onload = function () {
        $(function () {
            if (window.location.protocol === "https:")
                window.location.protocol = "http";
        });
    }
</script>

</html>